<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/altura_cardview"
    android:layout_marginLeft="@dimen/margen_nombre_puppy"
    android:layout_marginRight="@dimen/margen_nombre_puppy"
    android:layout_marginTop="@dimen/margen_nombre_puppy"
    android:layout_marginBottom="@dimen/margen_nombre_puppy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margen_nombre_puppy"
        android:paddingRight="@dimen/margen_nombre_puppy"
        android:paddingTop="@dimen/margen_nombre_puppy"
        android:paddingBottom="@dimen/margen_nombre_puppy">

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="@dimen/tama単o_foto"
            android:layout_height="@dimen/tama単o_foto"
            android:src="@drawable/dog_face"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibBoneLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dogbone"/>

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="@dimen/largo_nombre_puppy"
                android:layout_height="match_parent"
                android:text="@string/default_nombreMascota"
                android:textSize="@dimen/tama単o_nombre_puppy"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margen_nombre_puppy"/>

            <TextView
                android:id="@+id/tvCantidadLikes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/default_cantidad_likes"
                android:gravity="center_vertical"
                android:textSize="@dimen/tama単o_nombre_puppy"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dogbone_gold"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>