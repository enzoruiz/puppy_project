<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enzoruiz.puppyproject.fragments.PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/civPuppyPerfilFoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dog_perfil"
            app:civ_border_color="#17a3b3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_margen"/>

        <TextView
            android:id="@+id/tvPuppyNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_nombreMascota"
            android:textSize="@dimen/tamaÃ±o_nombre_puppy"
            android:layout_marginTop="@dimen/default_margen"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_grosor"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/default_margen"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPuppyPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>
